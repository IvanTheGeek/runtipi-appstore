{
    "$schema": "../compose-schema.json",
    "services": [
      {
        "image": "ghcr.io/zadam/trilium:0.63.7",
        "name": "trilium",
        "internalPort": 8080,
        "isMain": true,
        "environment": {
          "TRILIUM_DATA_DIR": "/home/node/trilium-data"
        },
        "volumes": [
          {
            "hostPath": "${APP_DATA_DIR}/data",
            "containerPath": "/home/node/trilium-data"
          }
        ]
      }
    ]
  }